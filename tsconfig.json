{
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./build/js/bundle.[contenthash].js",
      "sourceMap": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "target": "es6",
      "jsx": "react",
      "noEmit": false,
      "allowJs": false,
      "typeRoots" : ["node_modules/@types", "src/types"],
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src",
      "src/jest.config.ts"
    ]
}
